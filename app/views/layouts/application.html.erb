<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application" %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
      <div id="redirect-to-homepage">
        MyApp
      </div>
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { confirm: "Are you sure?" }, method: :delete, id: "sign-out-link" %>
      <% end %>
    </header>
    <% if flash[:notice].present? %>
      <div class="notice">
        <a href="#" data-dismiss="notice" class="close">×</a>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="alert">
        <a href="#" data-dismiss="alert" class="close">×</a>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <div id="body">
      <%= yield %>
    </div>
  </body>
</html>
